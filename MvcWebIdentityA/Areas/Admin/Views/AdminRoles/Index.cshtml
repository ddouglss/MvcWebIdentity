@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ROLES";
}

<h1 class="bg-info text-white text-center py-3">Roles</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Criar Role</a>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead class="thead-light">
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Editar</th>
            <th>Deletar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Update" asp-route-id="@role.Id">
                        Editar
                    </a>
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="get">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Deletar
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
