@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserInManager

@if (SignInManager.IsSignedIn(User))
{
    @if (User.IsInRole("Admin"))
    {
        <li class="nav-item">
            <!-- Link do Admin com ícone e um estilo mais moderno -->
            <a class="nav-link text-dark d-flex align-items-center"
               asp-area="Admin" asp-controller="Admin" asp-action="Index">
                <i class="bi bi-shield-lock mr-2"></i> Admin
            </a>
        </li>
    }
}
