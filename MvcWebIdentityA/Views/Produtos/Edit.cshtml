@model MvcWebIdentityA.Entities.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<div class="container py-5">
    <h1 class="text-center mb-4">Editar Produto</h1>

    <h4 class="text-center mb-4">Dados do Produto</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Campo ProdutoId (Oculto) -->
                <input type="hidden" asp-for="ProdutoId" />

                <!-- Campo Nome -->
                <div class="form-group mb-3">
                    <label asp-for="Nome" class="control-label">Nome</label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome do produto" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <!-- Campo Preço -->
                <div class="form-group mb-4">
                    <label asp-for="Preco" class="control-label">Preço</label>
                    <input asp-for="Preco" class="form-control" type="number" step="0.01" placeholder="Digite o preço do produto" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>

                <!-- Botões -->
                <div class="form-group text-center">
                    <input type="submit" value="Salvar" class="btn btn-success btn-lg" />
                    <a class="btn btn-danger btn-lg ml-3" asp-action="Index">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
