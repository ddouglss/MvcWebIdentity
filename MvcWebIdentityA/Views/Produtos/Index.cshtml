@model IEnumerable<MvcWebIdentityA.Entities.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<div class="container py-5">
    <h1 class="text-center mb-4">Produtos</h1>

    <!-- Botão para Criar Novo Produto -->
    <div class="text-center mb-3">
        <a class="btn btn-success btn-lg" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Criar Novo Produto
        </a>
    </div>

    <!-- Tabela de Produtos -->
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Nome)</th>
                <th>@Html.DisplayNameFor(model => model.First().Preco)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@item.Preco.ToString("C")</td> <!-- Formatação do preço em moeda -->
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.ProdutoId">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a class="btn btn-sm btn-warning" asp-action="Details" asp-route-id="@item.ProdutoId">
                            <i class="bi bi-eye"></i> Detalhes
                        </a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ProdutoId">
                            <i class="bi bi-trash"></i> Deletar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            Nenhum produto encontrado.
        </div>
    }
</div>
