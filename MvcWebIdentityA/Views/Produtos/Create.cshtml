@model MvcWebIdentityA.Entities.Produto

@{
    ViewData["Title"] = "Criar Produto";
}

<div class="text-center mb-4">
    <h1 class="display-4 text-primary">Criar Produto</h1>
    <h4 class="text-muted">Preencha os dados abaixo para adicionar um novo produto.</h4>
</div>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4>Novo Produto</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group">
                        <label asp-for="Nome" class="font-weight-bold"></label>
                        <input asp-for="Nome" class="form-control" placeholder="Digite o nome do produto" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Preco" class="font-weight-bold"></label>
                        <input asp-for="Preco" class="form-control" type="number" step="0.01" placeholder="Digite o preço do produto" />
                        <span asp-validation-for="Preco" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary btn-lg px-4 py-2">Criar</button>
                        <a class="btn btn-secondary btn-lg px-4 py-2 ml-3" asp-action="Index">Voltar para a lista</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

