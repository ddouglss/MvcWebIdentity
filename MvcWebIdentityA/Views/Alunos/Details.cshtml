@model MvcWebIdentityA.Entities.Aluno

@{
    ViewData["Title"] = "Detalhes do Aluno";
}

<div class="container py-5">
    <h1 class="text-center mb-4">Detalhes do Aluno</h1>
    <div class="card">
        <div class="card-header bg-info text-white">
            <h4>Informações do Aluno</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <!-- Nome -->
                <dt class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.Nome)</strong></dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <!-- Email -->
                <dt class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.Email)</strong></dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <!-- Idade -->
                <dt class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.Idade)</strong></dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Idade)</dd>

                <!-- Curso -->
                <dt class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.Curso)</strong></dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Curso)</dd>
            </dl>
        </div>
    </div>

    <!-- Ações -->
    <div class="mt-4 text-center">
        <a class="btn btn-warning btn-lg" asp-action="Edit" asp-route-id="@Model?.AlunoId">Editar</a>
        <a class="btn btn-secondary btn-lg ml-3" asp-action="Index">Voltar</a>
    </div>
