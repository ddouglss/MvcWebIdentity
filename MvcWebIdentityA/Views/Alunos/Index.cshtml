@model IEnumerable<MvcWebIdentityA.Entities.Aluno>

@{
    ViewData["Title"] = "Index";
}

<div class="container py-5">
    <h1 class="text-center mb-4">Alunos</h1>

    <!-- Botão para Criar Novo Aluno -->
    <div class="text-center mb-3">
        <a class="btn btn-success btn-lg" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Criar Novo Aluno
        </a>
    </div>

    <!-- Tabela de Alunos -->
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Idade)</th>
                <th>@Html.DisplayNameFor(model => model.Curso)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Idade)</td>
                    <td>@Html.DisplayFor(modelItem => item.Curso)</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.AlunoId">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a class="btn btn-sm btn-warning" asp-action="Details" asp-route-id="@item.AlunoId">
                            <i class="bi bi-eye"></i> Detalhes
                        </a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.AlunoId">
                            <i class="bi bi-trash"></i> Deletar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
